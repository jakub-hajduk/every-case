{
  "name": "every-case",
  "version": "0.0.1",
  "description": "Tool for generating web-components stories with all cases of usage",
  "scripts": {
    "start": "npm run build:cjs -- --watch",
    "prebuild": "rm -rf dist/",
    "build": "npm run build:cjs && npm run build:esm",
    "postbuild": "tsc && node scripts/package.js",
    "build:base": "esbuild src/index.ts --bundle --target=node16 --platform=node",
    "build:cjs": "npm run build:base -- --format=cjs --outfile=dist/index.cjs",
    "build:esm": "npm run build:base -- --format=esm --outfile=dist/index.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jakub-hajduk/every-case.git"
  },
  "keywords": [
    "custom",
    "elements",
    "manifest",
    "custom",
    "elements",
    "web",
    "components",
    "component",
    "permutations",
    "stories"
  ],
  "author": "Jakub Hajduk",
  "license": "ISC",
  "dependencies": {
    "cartesian": "^1.0.1",
    "closest-package": "^1.0.0",
    "handlebars": "^4.7.7",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "esbuild": "^0.14.42",
    "@types/node": "^17.0.36",
    "custom-elements-manifest": "^1.0.0",
    "typescript": "^4.7.2"
  }
}
